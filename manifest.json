{
	"manifest_version": 2,
	"name": "PFHC Names Generator",
	"version": "1.0",
	"description": "This addon allows you to generate a Microsoft Word document containing a list of reserved temple names found on FamilySearch.",
	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},
	"applications": {
		"gecko": {
			"id": "pfhc-names-generator@puyallupfamilyhistorycenter.org"
		}
	},
	"permissions": [
	    "tabs",
	    "<all_urls>",
	    "downloads"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
    },
	"browser_action": {
	    "default_icon": "icons/icon-32.png",
	    "default_title": "Puyllup Family History Center",
	    "default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*.familysearch.org/*"],
			"js": ["pfhc-verify.js"]
		}
	]
}